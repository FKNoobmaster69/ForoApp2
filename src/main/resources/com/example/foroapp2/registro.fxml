<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<ScrollPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.foroapp2.controllers.RegistroController"
            stylesheets="@/styles/estilos.css"
            fitToWidth="true">

    <VBox alignment="CENTER" spacing="15" prefWidth="420" styleClass="login-root">
        <padding>
            <Insets top="25" right="25" bottom="25" left="25"/>
        </padding>

        <Label text="Registro de Usuario" styleClass="login-title"/>

        <TextField fx:id="nombreField" promptText="Nombre de usuario" styleClass="login-field"/>
        <TextField fx:id="emailField" promptText="Correo electrónico" styleClass="login-field"/>
        <PasswordField fx:id="passwordField" promptText="Contraseña" styleClass="login-field"/>

        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label text="Género:"/>
            <RadioButton fx:id="hombreRadio" text="Hombre">
                <toggleGroup>
                    <ToggleGroup fx:id="generoGroup"/>
                </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="mujerRadio" text="Mujer" toggleGroup="$generoGroup"/>
            <RadioButton fx:id="otroRadio" text="Otro" toggleGroup="$generoGroup"/>
        </HBox>

        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label text="Fecha de nacimiento:"/>
            <DatePicker fx:id="fechaNacimientoPicker" promptText="Selecciona fecha"/>
        </HBox>

        <Label text="Descripción:" alignment="CENTER_LEFT"/>
        <TextArea fx:id="descripcionArea" promptText="Cuéntanos sobre ti..." prefHeight="90" styleClass="login-field"/>

        <Label text="Redes sociales:" alignment="CENTER_LEFT"/>
        <HBox spacing="10">
            <TextField fx:id="facebookField" promptText="Facebook" styleClass="login-field"/>
            <TextField fx:id="twitterField" promptText="Twitter" styleClass="login-field"/>
            <TextField fx:id="instagramField" promptText="Instagram" styleClass="login-field"/>
        </HBox>

        <Label fx:id="mensajeLabel" styleClass="error-label"/>

        <HBox alignment="CENTER" spacing="10">
            <Button text="Registrarse" onAction="#registrar" styleClass="login-button"/>
            <Button text="Volver al login" onAction="#volverLogin" styleClass="register-button"/>
        </HBox>
    </VBox>

</ScrollPane>