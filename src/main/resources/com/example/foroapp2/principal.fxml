    <center>
        <ScrollPane fitToWidth="true">
            <content>
                <VBox fx:id="postContainer" spacing="15">
                    <padding>
                        <Insets top="15" right="15" bottom="15" left="15" />
                    </padding>
                </VBox>
            </content>
        </ScrollPane>
    </center>

</BorderPane>
