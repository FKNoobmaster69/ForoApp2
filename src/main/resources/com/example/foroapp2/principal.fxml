            </padding>
            <Label text="Bienvenido," styleClass="login-title" />
            <Label fx:id="welcomeLabel" styleClass="login-title" />
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="newPostButton" text="Crear Post" styleClass="login-button" />
            <Button fx:id="logoutButton" text="Cerrar SesiÃ³n" styleClass="register-button" />
        </HBox>
