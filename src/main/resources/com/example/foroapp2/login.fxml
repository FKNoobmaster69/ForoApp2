<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:controller="com.example.foroapp2.controllers.LoginController"
      xmlns="http://javafx.com/javafx/22.0.2"
      xmlns:fx="http://javafx.com/fxml"
      alignment="CENTER" spacing="10" prefWidth="400" prefHeight="500">

    <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>

    <Label text="Iniciar sesión" style="-fx-font-size: 20px;"/>

    <TextField fx:id="emailField" promptText="Correo electrónico"/>
    <PasswordField fx:id="passwordField" promptText="Contraseña"/>

    <Button text="Entrar" onAction="#iniciarSesion" maxWidth="200"/>
    <Button text="Crear cuenta" onAction="#irARegistro" maxWidth="200"/>

    <Label fx:id="mensajeErrorLabel" textFill="red"/>
</VBox>