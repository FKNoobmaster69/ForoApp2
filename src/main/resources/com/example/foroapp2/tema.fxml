
<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.foroapp2.controllers.TemaController" spacing="15" alignment="TOP_CENTER" prefWidth="400" prefHeight="600">
    <padding><Insets top="20" left="20" right="20" bottom="20"/></padding>
    <Label text="Temas" styleClass="login-title"/>
    <ListView fx:id="temasListView" prefHeight="400"/>
    <HBox spacing="10">
        <TextField fx:id="nuevoTemaField" promptText="Nuevo tema" HBox.hgrow="ALWAYS"/>
        <Button text="Agregar" onAction="#crearTema"/>
    </HBox>
</VBox>