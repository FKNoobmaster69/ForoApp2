<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.foroapp2.controllers.TemaController"
      stylesheets="@/styles/estilos.css"
      styleClass="login-root"
      spacing="15" alignment="TOP_CENTER" prefWidth="400" prefHeight="600">

    <children>
        <Label text="Temas" styleClass="login-title"/>
        <ListView fx:id="temasListView" styleClass="login-field" prefHeight="400"/>
        <HBox spacing="10">
            <TextField fx:id="nuevoTemaField" promptText="Nuevo tema" styleClass="login-field" HBox.hgrow="ALWAYS"/>
            <Button text="Agregar" onAction="#crearTema" styleClass="login-button"/>
        </HBox>
    </children>

    <padding><Insets top="20" left="20" right="20" bottom="20"/></padding>
</VBox>
